<div class="cont-<%= message.user.id %>">
    <div class="message-box msg-<%= message.user.id %>">
        <div class="message">
            <img src="" alt="" />
            <div class="texts">
                <h6 class="name"><%= message.user.username %></h6>
                <p class="p-<%= message.user.id %>">
                <%= message.body %>
                </p>
                <span><%= time_ago_in_words(message.created_at) %> ago </span>
            </div>
        </div>
    </div>
</div>